<p><font size="6">Vehicles Inventory</font></p>


@model IEnumerable<OfficialCPP.Models.OwnersInformation>

@{
    ViewBag.Title = "OwnersInfo";
}



<p>
    @Html.ActionLink("Create New Ticket", "Create")
</p>
<table class="table">
    <tr>

        <th>
            Status
        </th>
        <th>
            Ticket Number
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Make
        </th>
        <th>
            Model
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Color)
        </th>*@
        <th>
            License Plate
        </th>
        <th>
            Location Parked
        </th>
        <th>
            Parker
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TicketNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Make)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Model)
    </td>
    @*<td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.LicensePlate)
    </td>
    <td>

        @(item.Activities.Where(e => e.ReparkedLocat != null).OrderByDescending(w => w.ReturnTime).Select(a => a.ReparkedLocat).FirstOrDefault() ?? item.ParkedLocation)

    </td>
    <td>
        @(item.Activities.Where(e => e.Parkedby != null).OrderByDescending(w => w.ReturnTime).Select(a => a.Parkedby).FirstOrDefault() ?? item.ParkedBy)
        @*@Html.DisplayFor(modelItem => item.Driver.DriversId)*@
    </td>
   
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.TicketNumber }) 
        @Html.ActionLink("Details", "Details", new { id = item.TicketNumber }) 
        @Html.ActionLink("Delete", "Delete", new { id = item.TicketNumber })
    </td>
</tr>
}
</table>
